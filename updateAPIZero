
#script to install latest version from API repository from GitHub


import os
import time

#deletes old programs

os.system("rm TGpub.py")
os.system("rm VOCGpub.py")
os.system("rm updateAPIZero.py")

#clones repository
os.system("git clone https://github.com/Anaphite/Data-Logging.git")
time.sleep(10)
#moves files out of API file to where update.py stored
os.system("mv /home/pi/Vlog/Data-Logging/TGpub.py /home/pi/Vlog/TGpub.py")
os.system("mv /home/pi/Vlog/Data-Logging/VOCGpub.py /home/pi/Vlog/VOCGpub.py")
os.system("mv /home/pi/Vlog/Data-Logging/updateAPI.py /home/pi/Vlog/updateAPIZero.py")


#removes the API directory now relavent contents have been removed
os.system("rm -r -f /home/pi/Vlog/Data-Logging")
